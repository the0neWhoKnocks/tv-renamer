{
  "name": "@noxx/tv-renamer",
  "version": "1.0.0",
  "description": "A local network app that allows for renaming TV shows",
  "main": "index.js",
  "scripts": {
    "build:app": "cross-env BABEL_ENV=cjs MODE=production webpack",
    "build:dist": "node ./bin/prepDist && npm run transpile",
    "gen:files": "node ./bin/genFiles",
    "lint": "eslint ./src/**/*.js",
    "start": "npm run build:dist && npm run build:app",
    "start:dev": "npm run build:dist && cross-env BABEL_ENV=cjs PORT=9000 concurrently --kill-others -p {name} -n BABEL,WEBPACK,SERVER -c black.bgGreen,black.bgCyan,black.bgMagenta \"npm run watch:transpile\" \"npm run watch:app\" \"npm run watch:server\"",
    "start:server": "node ./src/server",
    "test": "npm run lint && npm run unit",
    "transpile": "cross-env BABEL_ENV=cjs babel ./src -d ./dist/cjs --copy-files",
    "unit": "cross-env BABEL_ENV=cjs jest --env=jsdom --config ./.jest/conf.jest.js",
    "watch:app": "cross-env BABEL_ENV=cjs MODE=development webpack --watch",
    "watch:server": "babel-node ./src/server/watcher",
    "watch:transpile": "npm run transpile -- --watch --verbose",
    "watch:unit": "npm run unit -- --watchAll"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/the0neWhoKnocks/tv-renamer.git"
  },
  "author": "",
  "dependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "babel-plugin-emotion": "^10.0.7",
    "babel-plugin-module-resolver": "^3.2.0",
    "concurrently": "^4.1.0",
    "cross-env": "^5.2.0",
    "mkdirp": "^0.5.1",
    "nodemon": "^1.18.10",
    "request": "^2.88.0",
    "rimraf": "^2.6.3"
  },
  "devDependencies": {
    "@emotion/core": "^10.0.7",
    "@noxx/eslint-config": "^1.0.7",
    "@noxx/webpack-tidy-plugin": "^2.0.2",
    "browser-sync": "^2.26.3",
    "emotion": "^10.0.7",
    "emotion-server": "^10.0.7",
    "enzyme": "^3.7.0",
    "enzyme-adapter-react-16": "^1.7.0",
    "eslint-plugin-require-jsdoc-except": "^1.3.0",
    "jest": "^24.1.0",
    "prop-types": "^15.6.1",
    "react": "^16.3.2",
    "react-dom": "^16.3.2",
    "simple-progress-webpack-plugin": "^1.1.2",
    "webpack": "^4.24.0",
    "webpack-assets-manifest": "^3.1.1",
    "webpack-cli": "^3.1.2"
  }
}
